# Используем официальный образ Node.js в качестве базового образа для бэкенда
FROM node:14 AS backend

# Устанавливаем рабочую директорию в /app
WORKDIR /app

# Копируем файлы package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем остальные файлы бэкенда
COPY . .

# Экспонируем порт 5000 для Express сервера
EXPOSE 5000

# Команда для запуска бэкенда при старте контейнера
CMD ["npm", "start"]
